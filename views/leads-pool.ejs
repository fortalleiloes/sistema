                <script>
                    function switchTab(tabName) {
                        const tabs = ['leads', 'blacklist'];
                        const activeClasses = ['shadow-sm', 'bg-[var(--macos-bg-secondary)]', 'text-[var(--macos-text-primary)]'];
                        const inactiveClasses = ['text-[var(--macos-text-tertiary)]', 'hover:text-[var(--macos-text-primary)]', 'bg-transparent'];

                        tabs.forEach(t => {
                            const panel = document.getElementById('panel-' + t);
                            const btn = document.getElementById('tab-' + t);

                            if (!panel || !btn) return;

                            if (t === tabName) {
                                panel.classList.remove('hidden');
                                btn.classList.remove(...inactiveClasses);
                                btn.classList.add(...activeClasses);
                            } else {
                                panel.classList.add('hidden');
                                btn.classList.remove(...activeClasses);
                                btn.classList.add(...inactiveClasses);
                            }
                        });
                    }

                    // Auto-init
                    document.addEventListener('DOMContentLoaded', () => {
                        switchTab('leads');
                    });
                </script>

