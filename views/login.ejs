<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <title>Login - Fortal</title>
    <%- include('partials/head') %>
</head>

<body>
    <div class="fixed inset-0 z-[100] flex items-center justify-center p-4" style="background: var(--bg-gradient);">
        <div class="w-full max-w-sm card rounded-2xl p-8 shadow-2xl">
            <div class="text-center mb-6">
                <div
                    style="display: inline-block; background: rgba(0, 0, 0, 0.08); border-radius: 20px; padding: 10px; margin-bottom: 16px; box-shadow: 0 2px 12px rgba(0,0,0,0.1);">
                    <img src="/images/logo-fortal.png" alt="Fortal Logo" class="w-24 h-24 object-contain"
                        style="transform: scale(1.15);">
                </div>
                <h1 class="text-3xl font-bold gradient-text">Fortal</h1>
                <p class="text-[var(--text-secondary)] mt-2">Acesse sua conta para continuar</p>
            </div>
            <form id="login-form" class="space-y-4">
                <div>
                    <label for="username"
                        class="block text-sm font-medium mb-2 text-[var(--text-secondary)]">Usuário</label>
                    <input type="text" id="username" name="username" required
                        class="w-full px-4 py-2 rounded-lg bg-[var(--bg-interactive)] border border-[var(--border-color)] focus:border-[var(--text-accent)] focus:outline-none"
                        placeholder="Digite seu usuário">
                </div>
                <div>
                    <label for="password"
                        class="block text-sm font-medium mb-2 text-[var(--text-secondary)]">Senha</label>
                    <input type="password" id="password" name="password" required
                        class="w-full px-4 py-2 rounded-lg bg-[var(--bg-interactive)] border border-[var(--border-color)] focus:border-[var(--text-accent)] focus:outline-none"
                        placeholder="Digite sua senha">
                </div>
                <p id="login-error" class="text-red-500 text-sm text-center hidden"></p>
                <div class="pt-2">
                    <button type="submit" id="login-submit"
                        class="w-full px-6 py-3 rounded-lg btn-primary text-blue-950 font-bold text-lg">Entrar</button>
                </div>
            </form>
            <div class="mt-4 text-center text-sm text-[var(--text-secondary)]">ou</div>
            <div class="mt-4">
                <button id="supabase-login-btn"
                    class="w-full px-6 py-3 rounded-lg bg-white text-black font-semibold">Entrar com Supabase</button>
            </div>
        </div>
    </div>

    <script type="module">
        // Supabase client no browser (usa as variáveis passadas pelo servidor)
        import { createClient } from 'https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2.39.3/+esm';
        const SUPABASE_URL = '<%= supabaseUrl %>';
        const SUPABASE_ANON_KEY = '<%= supabaseAnonKey %>';

        if (SUPABASE_URL && SUPABASE_ANON_KEY) {
            const supabase = createClient(SUPABASE_URL, SUPABASE_ANON_KEY);

            const supabaseBtn = document.getElementById('supabase-login-btn');
            const loginForm = document.getElementById('login-form');
            const loginSubmit = document.getElementById('login-submit');
            const loginError = document.getElementById('login-error');

            // Intercepta o submit padrão para tentar login via Supabase primeiro
            loginForm.addEventListener('submit', async (e) => {
                e.preventDefault();
                const email = document.getElementById('username').value;
                const password = document.getElementById('password').value;
                try {
                    const { data, error } = await supabase.auth.signInWithPassword({ email, password });
                    if (error || !data?.session) {
                        loginError.textContent = error?.message || 'Erro ao autenticar.';
                        loginError.classList.remove('hidden');
                        return;
                    }

                    const accessToken = data.session.access_token;
                    // Cria sessão no servidor
                    const resp = await fetch('/session', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ access_token: accessToken })
                    });
                    if (resp.ok) {
                        window.location.href = '/';
                    } else {
                        const json = await resp.json().catch(() => ({}));
                        loginError.textContent = json?.error || 'Erro ao criar sessão no servidor.';
                        loginError.classList.remove('hidden');
                    }
                } catch (err) {
                    console.error('Erro no login Supabase:', err);
                    loginError.textContent = 'Erro no login. Veja o console.';
                    loginError.classList.remove('hidden');
                }
            });

            // Botão separado para login via Supabase (pede credenciais via prompt simples)
            supabaseBtn.addEventListener('click', async (e) => {
                e.preventDefault();
                const email = document.getElementById('username').value || prompt('Email:');
                const password = document.getElementById('password').value || prompt('Senha:');
                if (!email || !password) return alert('Email e senha são necessários.');
                try {
                    const { data, error } = await supabase.auth.signInWithPassword({ email, password });
                    if (error || !data?.session) return alert('Erro ao autenticar: ' + (error?.message || ''));
                    const accessToken = data.session.access_token;
                    const resp = await fetch('/session', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ access_token: accessToken })
                    });
                    if (resp.ok) window.location.href = '/';
                    else alert('Erro ao criar sessão no servidor.');
                } catch (err) {
                    console.error(err);
                    alert('Erro no login. Veja o console.');
                }
            });
        } else {
            // Esconde o botão se supabase não estiver configurado
            const supabaseBtn = document.getElementById('supabase-login-btn');
            if (supabaseBtn) supabaseBtn.style.display = 'none';
        }
    </script>
</body>

</html>