<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <title>Fortal - Novos Leads</title>
    <%- include('partials/head') %>
</head>

<body class="min-h-screen page-leads">

    <%- include('partials/macos-toolbar', { title: 'Piscina de Leads' , username: username, profile_pic_url:
        profile_pic_url }) %>
        <%- include('partials/macos-sidebar', { user: user }) %>

            <main class="macos-main-content">
                <div class="animate-fade-in" style="padding-bottom: 40px; max-width: 1200px; margin: 0 auto;">

                    <!-- Admin Dashboard (KPIs) -->
                    <% if (locals.isAdmin && locals.kpis) { %>
                        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
                            <!-- Total Capital -->
                            <div
                                class="macos-card p-5 bg-gradient-to-br from-green-500/10 to-transparent border-green-500/20">
                                <p class="text-xs font-bold text-green-600 uppercase mb-1"><i
                                        class="fa-solid fa-sack-dollar mr-1"></i> Potencial Carteira</p>
                                <h3 class="text-2xl font-black text-[var(--macos-text-primary)]">
                                    <%= kpis.totalCapital.toLocaleString('pt-BR', { style: 'currency' , currency: 'BRL'
                                        }) %>
                                </h3>
                                <p class="text-xs text-[var(--macos-text-tertiary)] mt-1">Soma do capital disponível</p>
                            </div>

                            <!-- Qualidade Média -->
                            <div
                                class="macos-card p-5 bg-gradient-to-br from-blue-500/10 to-transparent border-blue-500/20">
                                <p class="text-xs font-bold text-blue-600 uppercase mb-1"><i
                                        class="fa-solid fa-chart-line mr-1"></i> Score Médio</p>
                                <h3 class="text-2xl font-black text-[var(--macos-text-primary)]">
                                    <%= kpis.avgScore %> / 100
                                </h3>
                                <p class="text-xs text-[var(--macos-text-tertiary)] mt-1">Nível: <%= kpis.qualityLabel
                                        %>
                                </p>
                            </div>

                            <!-- Total Leads -->
                            <div class="macos-card p-5">
                                <p class="text-xs font-bold text-[var(--macos-text-secondary)] uppercase mb-1"><i
                                        class="fa-solid fa-users mr-1"></i> Volume</p>
                                <h3 class="text-2xl font-black text-[var(--macos-text-primary)]">
                                    <%= kpis.totalLeads %>
                                </h3>
                                <p class="text-xs text-[var(--macos-text-tertiary)] mt-1">Leads aguardando análise</p>
                            </div>
                        </div>
                        <% } %>

                            <!-- Header -->
                            <div class="flex items-center justify-between mb-8">
                                <div>
                                    <h1 class="text-3xl font-bold text-[var(--macos-text-primary)] mb-2">Novos Leads
                                    </h1>
                                    <p class="text-[var(--macos-text-secondary)]">Leads qualificados pelo funil
                                        aguardando
                                        atendimento.</p>
                                </div>
                                <div class="flex items-center gap-3">
                                    <div
                                        class="flex items-center gap-2 bg-[var(--macos-bg-secondary)] border border-[var(--macos-divider)] rounded-lg px-3 py-2">
                                        <i class="fa-solid fa-filter text-[var(--macos-text-tertiary)] text-xs"></i>
                                        <select id="stateFilter"
                                            class="bg-transparent border-none text-sm text-[var(--macos-text-primary)] focus:outline-none cursor-pointer min-w-[140px]"
                                            style="display: block; opacity: 1; visibility: visible;">
                                            <option value="" class="bg-[var(--macos-bg-secondary)]">Todos os Estados
                                            </option>
                                        </select>
                                    </div>

                                    <div
                                        class="px-4 py-2 bg-yellow-500/10 rounded-lg border border-yellow-500/20 text-yellow-500 text-sm font-medium whitespace-nowrap">
                                        <i class="fa-solid fa-star mr-2"></i> Leads Quentes: <%= leads.filter(l=>
                                            l.score >
                                            70).length %>
                                    </div>
                                </div>
                            </div>
                </div>

                <!-- Leads Table -->
                <!-- Tabs Navigation -->
                <!-- Tabs Navigation -->
                <!-- Tabs Navigation (Segmented Control Style) -->
                <div class="flex items-center justify-center mb-6">
                    <div class="bg-[var(--macos-bg-tertiary)] p-1 rounded-lg inline-flex relative shadow-inner">
                        <button onclick="switchTab('leads')" id="tab-leads"
                            class="px-6 py-2 rounded-md text-sm font-medium transition-all duration-200 flex items-center gap-2 shadow-sm bg-[var(--macos-bg-secondary)] text-[var(--macos-text-primary)]">
                            <i class="fa-solid fa-check-circle text-green-500"></i>
                            <span>Qualificados</span>
                            <span
                                class="bg-green-500/10 text-green-500 text-xs px-2 py-0.5 rounded-full ml-1 font-bold border border-green-500/20">
                                <%= kpis.totalLeads %>
                            </span>
                        </button>

                        <button onclick="switchTab('blacklist')" id="tab-blacklist"
                            class="px-6 py-2 rounded-md text-sm font-medium transition-all duration-200 flex items-center gap-2 text-[var(--macos-text-tertiary)] hover:text-[var(--macos-text-primary)]">
                            <i class="fa-solid fa-ban text-red-500"></i>
                            <span>Recusados</span>
                            <% if(locals.blacklist && blacklist.length> 0) { %>
                                <span
                                    class="bg-red-500/10 text-red-500 text-xs px-2 py-0.5 rounded-full ml-1 font-bold border border-red-500/20">
                                    <%= blacklist.length %>
                                </span>
                                <% } else { %>
                                    <span class="text-xs opacity-50 ml-1">0</span>
                                    <% } %>
                        </button>
                    </div>
                </div>

                <!-- Leads Table (Valid) -->
                <div id="panel-leads" class="macos-card p-0 overflow-hidden">
                    <div class="overflow-x-auto">
                        <table class="w-full text-left border-collapse">
                            <thead>
                                <tr class="bg-[var(--macos-bg-tertiary)] border-b border-[var(--macos-divider)]">
                                    <th
                                        class="p-4 text-xs font-semibold text-[var(--macos-text-secondary)] uppercase tracking-wider">
                                        Score</th>
                                    <th
                                        class="p-4 text-xs font-semibold text-[var(--macos-text-secondary)] uppercase tracking-wider">
                                        Nome / Contato</th>
                                    <th
                                        class="p-4 text-xs font-semibold text-[var(--macos-text-secondary)] uppercase tracking-wider">
                                        Perfil</th>
                                    <th
                                        class="p-4 text-xs font-semibold text-[var(--macos-text-secondary)] uppercase tracking-wider">
                                        Capital</th>
                                    <th
                                        class="p-4 text-xs font-semibold text-[var(--macos-text-secondary)] uppercase tracking-wider">
                                        Ação</th>
                                    <% if (locals.isAdmin) { %>
                                        <th
                                            class="p-4 text-xs font-semibold text-[var(--macos-text-secondary)] uppercase tracking-wider">
                                            Rastreio</th>
                                        <% } %>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-[var(--macos-divider)]" id="leadsTableBody">
                                <% if (leads && leads.length> 0) { %>
                                    <!-- START LOOP -->
                                    <% leads.forEach((lead, index)=> { %>

                                        <!-- MAIN LEAD ROW -->
                                        <tr class="hover:bg-[var(--macos-bg-secondary)] transition-colors group lead-row cursor-pointer border-l-4 <%= lead.hasAttention ? 'border-l-yellow-400' : 'border-l-transparent' %>"
                                            data-state="<%= lead.estado || '' %>"
                                            data-tracking="<%= lead.whatsapp %>|<%= lead.fingerprint || '' %>">

                                            <!-- Score w/ Indicator -->
                                            <td class="p-4">
                                                <div class="flex items-center gap-3">
                                                    <!-- Score Circle (Same code as before) -->
                                                    <% let tierColor='text-gray-400' ; let tierBg='bg-gray-500/10' ; let
                                                        tierRing='stroke-gray-500/30' ; let icon='' ; let label='Bronze'
                                                        ; if (lead.score>= 90) { tierColor = 'text-purple-400'; tierBg =
                                                        'bg-purple-500/10'; tierRing = 'stroke-purple-500'; icon =
                                                        'fa-crown'; label = 'Diamond'; }
                                                        else if (lead.score >= 70) { tierColor = 'text-emerald-400';
                                                        tierBg = 'bg-emerald-500/10'; tierRing = 'stroke-emerald-500';
                                                        icon = 'fa-bolt'; label = 'Gold'; }
                                                        else if (lead.score >= 50) { tierColor = 'text-amber-400';
                                                        tierBg = 'bg-amber-500/10'; tierRing = 'stroke-amber-500'; icon
                                                        = 'fa-star'; label = 'Silver'; }
                                                        const radius = 18; const circumference = 2 * Math.PI * radius;
                                                        const offset = circumference - ((lead.score / 100) *
                                                        circumference);
                                                        %>
                                                        <div
                                                            class="relative w-12 h-12 flex items-center justify-center">
                                                            <svg class="w-full h-full transform -rotate-90">
                                                                <circle cx="24" cy="24" r="<%= radius %>"
                                                                    stroke="currentColor" stroke-width="3"
                                                                    fill="transparent"
                                                                    class="text-[var(--macos-bg-tertiary)]" />
                                                                <circle cx="24" cy="24" r="<%= radius %>"
                                                                    stroke="currentColor" stroke-width="3"
                                                                    fill="transparent"
                                                                    stroke-dasharray="<%= circumference %>"
                                                                    stroke-dashoffset="<%= offset %>"
                                                                    stroke-linecap="round"
                                                                    class="<%= tierRing %> drop-shadow-md" />
                                                            </svg>
                                                            <div
                                                                class="absolute inset-0 flex items-center justify-center flex-col">
                                                                <span class="text-xs font-black <%= tierColor %>">
                                                                    <%= lead.score %>
                                                                </span>
                                                            </div>
                                                        </div>
                                                        <div class="flex flex-col">
                                                            <span
                                                                class="text-[10px] uppercase font-bold tracking-wider <%= tierColor %> opacity-90">
                                                                <%= label %>
                                                            </span>
                                                            <% if (lead.hasAttention) { %>
                                                                <span
                                                                    class="text-[9px] text-yellow-500 font-bold flex items-center gap-1 mt-0.5">
                                                                    <i class="fa-solid fa-triangle-exclamation"></i>
                                                                    Atenção
                                                                </span>
                                                                <% } else { %>
                                                                    <span
                                                                        class="text-[9px] text-[var(--macos-text-tertiary)]">Lead
                                                                        Comum</span>
                                                                    <% } %>
                                                        </div>
                                                </div>
                                            </td>

                                            <!-- Nome & Location + Attention Toggle -->
                                            <td class="p-4">
                                                <div class="flex flex-col gap-1">
                                                    <p class="font-semibold text-[var(--macos-text-primary)]">
                                                        <%= lead.nome %>
                                                    </p>

                                                    <div
                                                        class="flex items-center gap-3 text-xs text-[var(--macos-text-tertiary)]">
                                                        <span class="flex items-center gap-1"><i
                                                                class="fa-solid fa-location-dot"></i>
                                                            <%= lead.cidade || 'N/A' %> - <%= lead.estado || 'UF' %>
                                                        </span>
                                                        <span class="flex items-center gap-1"><i
                                                                class="fa-brands fa-whatsapp"></i>
                                                            <%= lead.whatsapp %>
                                                        </span>
                                                    </div>

                                                    <% if (lead.hasAttention) { %>
                                                        <div class="mt-2">
                                                            <button
                                                                onclick="document.getElementById('duplicates-<%= index %>').classList.toggle('hidden')"
                                                                class="text-[10px] bg-yellow-100 text-yellow-800 px-2 py-1 rounded border border-yellow-200 hover:bg-yellow-200 transition-colors flex items-center gap-2">
                                                                <i class="fa-solid fa-layer-group"></i>
                                                                <span>
                                                                    <%= lead.duplicateCount %> Duplicatas Detectadas (
                                                                        <%= lead.attentionReason %>)
                                                                </span>
                                                                <i class="fa-solid fa-chevron-down text-[9px]"></i>
                                                            </button>
                                                        </div>
                                                        <% } %>
                                                </div>
                                            </td>

                                            <!-- Perfil -->
                                            <td class="p-4">
                                                <div class="flex flex-col gap-1">
                                                    <span class="text-sm text-[var(--macos-text-primary)] capitalize">
                                                        <i
                                                            class="<%= lead.objetivo === 'investir' ? 'fa-solid fa-chart-line text-green-500' : 'fa-solid fa-house text-blue-500' %> mr-1"></i>
                                                        <%= lead.objetivo %>
                                                    </span>
                                                    <span class="text-xs text-slate-500">
                                                        <i
                                                            class="<%= lead.experiencia === 'ja_arrematei' ? 'fa-solid fa-medal text-yellow-500' : 'fa-solid fa-graduation-cap' %> mr-1"></i>
                                                        <%= lead.experiencia==='ja_arrematei' ? 'Já Arrematou'
                                                            : '1ª Viagem' %>
                                                    </span>
                                                    <span
                                                        class="text-xs <%= lead.restricao_nome ? 'text-red-500' : 'text-green-500' %>">
                                                        <i class="fa-solid fa-id-card mr-1"></i>
                                                        <%= lead.restricao_nome ? 'Restrição Ativa' : 'Nome Limpo' %>
                                                    </span>
                                                </div>
                                            </td>

                                            <!-- Capital -->
                                            <td class="p-4">
                                                <p class="font-medium text-[var(--macos-text-primary)]">
                                                    <%= (lead.capital_entrada || 0).toLocaleString('pt-BR', {
                                                        style: 'currency' , currency: 'BRL' }) %>
                                                </p>
                                                <span
                                                    class="text-xs px-2 py-0.5 rounded-full <%= lead.preferencia_pgto === 'vista' ? 'bg-green-500/10 text-green-500' : 'bg-blue-500/10 text-blue-500' %>">
                                                    <%= lead.preferencia_pgto==='vista' ? 'À Vista' : 'Financiado' %>
                                                </span>
                                            </td>

                                            <!-- Ação -->
                                            <td class="p-4">
                                                <form action="/api/leads/claim/<%= lead.id %>" method="POST"
                                                    class="inline">
                                                    <button type="submit"
                                                        class="macos-btn-primary py-1.5 px-3 text-xs flex items-center gap-2">
                                                        <i class="fa-solid fa-user-plus"></i> Puxar
                                                    </button>
                                                </form>
                                            </td>

                                            <!-- Rastreio -->
                                            <% if (locals.isAdmin) { %>
                                                <td class="p-4 text-xs text-[var(--macos-text-tertiary)] font-mono">
                                                    <div title="<%= lead.fingerprint %>">
                                                        <i class="fa-solid fa-fingerprint mb-1 mr-1"></i>
                                                        <%= lead.fingerprint ? lead.fingerprint.substring(0, 8) + '...'
                                                            : '--' %>
                                                    </div>
                                                </td>
                                                <% } %>
                                        </tr>

                                        <!-- DUPLICATES ROW (Hidden) -->
                                        <% if (lead.hasAttention) { %>
                                            <tr id="duplicates-<%= index %>"
                                                class="hidden bg-yellow-50/50 shadow-inner">
                                                <td colspan="6" class="p-0">
                                                    <div
                                                        class="px-12 py-3 border-l-4 border-l-yellow-400 bg-[var(--macos-bg-secondary)]">
                                                        <p
                                                            class="text-[10px] font-bold text-[var(--macos-text-tertiary)] uppercase tracking-wider mb-2">
                                                            Outras <%= lead.duplicateCount %> tentativas deste lead:</p>
                                                        <div class="space-y-1">
                                                            <% lead.duplicates.forEach(dup=> { %>
                                                                <div
                                                                    class="flex items-center justify-between p-2 rounded hover:bg-[var(--macos-bg-tertiary)] transition-colors border border-transparent hover:border-[var(--macos-divider)]">
                                                                    <div class="flex items-center gap-3">
                                                                        <div
                                                                            class="w-1.5 h-1.5 rounded-full bg-yellow-400">
                                                                        </div>
                                                                        <span
                                                                            class="text-xs text-[var(--macos-text-secondary)] font-mono">
                                                                            <%= new
                                                                                Date(dup.created_at).toLocaleString() %>
                                                                        </span>
                                                                        <span
                                                                            class="text-xs text-[var(--macos-text-primary)]">
                                                                            <%= dup.nome %>
                                                                        </span>
                                                                    </div>
                                                                    <div class="flex items-center gap-3">
                                                                        <span
                                                                            class="text-xs text-[var(--macos-text-tertiary)]">Score:
                                                                            <%= dup.score %>
                                                                        </span>
                                                                        <form action="/api/leads/claim/<%= dup.id %>"
                                                                            method="POST">
                                                                            <button type="submit"
                                                                                class="text-[10px] text-blue-500 hover:underline">Puxar
                                                                                este</button>
                                                                        </form>
                                                                    </div>
                                                                </div>
                                                                <% }); %>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% } %>

                                                <!-- END LOOP -->
                                                <% }); %>
                                                    <% } else { %>
                                                        <tr>
                                                            <td colspan="6"
                                                                class="p-8 text-center text-[var(--macos-text-tertiary)]">
                                                                <p>Nenhum lead qualificado no momento.</p>
                                                            </td>
                                                        </tr>
                                                        <% } %>
                            </tbody>
                        </table>

                        <!-- PAGINATION -->
                        <% if (locals.pagination && pagination.total> 1) { %>
                            <div
                                class="flex items-center justify-between p-4 bg-[var(--macos-bg-secondary)] border-t border-[var(--macos-divider)]">
                                <div class="text-xs text-[var(--macos-text-tertiary)]">
                                    Página <%= pagination.current %> de <%= pagination.total %>
                                </div>
                                <div class="flex items-center gap-2">
                                    <% if (pagination.hasPrev) { %>
                                        <a href="?page=<%= pagination.current - 1 %>"
                                            class="px-3 py-1 text-sm bg-[var(--macos-bg-tertiary)] rounded-md hover:bg-[var(--macos-bg-primary)] transition-colors border border-[var(--macos-divider)]">
                                            <i class="fa-solid fa-chevron-left mr-1"></i> Anterior
                                        </a>
                                        <% } %>

                                            <!-- Page Numbers (Smart) -->
                                            <div class="flex items-center gap-1">
                                                <% let startPage=Math.max(1, pagination.current - 2); let
                                                    endPage=Math.min(pagination.total, pagination.current + 2); if
                                                    (startPage> 1) { %>
                                                    <a href="?page=1"
                                                        class="px-3 py-1 text-sm bg-[var(--macos-bg-tertiary)] text-[var(--macos-text-secondary)] rounded-md hover:bg-[var(--macos-bg-primary)] transition-colors">1</a>
                                                    <% if (startPage> 2) { %>
                                                        <span class="px-2 text-[var(--macos-text-tertiary)]">...</span>
                                                        <% } %>
                                                            <% } for(let i=startPage; i <=endPage; i++) { if
                                                                (i==pagination.current) { %>
                                                                <span
                                                                    class="px-3 py-1 text-sm font-bold bg-blue-500 text-white rounded-md shadow-sm">
                                                                    <%= i %>
                                                                </span>
                                                                <% } else { %>
                                                                    <a href="?page=<%= i %>"
                                                                        class="px-3 py-1 text-sm bg-[var(--macos-bg-tertiary)] text-[var(--macos-text-secondary)] rounded-md hover:bg-[var(--macos-bg-primary)] transition-colors">
                                                                        <%= i %>
                                                                    </a>
                                                                    <% } } if (endPage < pagination.total) { %>
                                                                        <% if (endPage < pagination.total - 1) { %>
                                                                            <span
                                                                                class="px-2 text-[var(--macos-text-tertiary)]">...</span>
                                                                            <% } %>
                                                                                <a href="?page=<%= pagination.total %>"
                                                                                    class="px-3 py-1 text-sm bg-[var(--macos-bg-tertiary)] text-[var(--macos-text-secondary)] rounded-md hover:bg-[var(--macos-bg-primary)] transition-colors">
                                                                                    <%= pagination.total %>
                                                                                </a>
                                                                                <% } %>
                                            </div>

                                            <% if (pagination.hasNext) { %>
                                                <a href="?page=<%= pagination.current + 1 %>"
                                                    class="px-3 py-1 text-sm bg-[var(--macos-bg-tertiary)] rounded-md hover:bg-[var(--macos-bg-primary)] transition-colors border border-[var(--macos-divider)]">
                                                    Próxima <i class="fa-solid fa-chevron-right ml-1"></i>
                                                </a>
                                                <% } %>
                                </div>
                            </div>
                            <% } %>
                    </div>
                </div>

                <!-- Attention Table (Alertas) -->
                <div id="panel-attention" class="macos-card p-0 overflow-hidden hidden">
                    <div class="bg-yellow-500/5 p-4 border-b border-yellow-500/10">
                        <p class="text-sm text-yellow-500 flex items-center">
                            <i class="fa-solid fa-triangle-exclamation mr-2"></i>
                            Estes leads são válidos, mas compartilham dados (IP ou Dispositivo) com outros leads.
                            Verifique possível duplicidade.
                        </p>
                    </div>
                    <div class="overflow-x-auto">
                        <table class="w-full text-left border-collapse opacity-90">
                            <thead>
                                <tr class="bg-[var(--macos-bg-tertiary)] border-b border-[var(--macos-divider)]">
                                    <th class="p-4 text-xs font-semibold text-[var(--macos-text-secondary)] uppercase">
                                        Grupo / Alerta</th>
                                    <th class="p-4 text-xs font-semibold text-[var(--macos-text-secondary)] uppercase">
                                        Identificador</th>
                                    <th class="p-4 text-xs font-semibold text-[var(--macos-text-secondary)] uppercase">
                                        Frequência</th>
                                    <th class="p-4 text-xs font-semibold text-[var(--macos-text-secondary)] uppercase">
                                        Valor Envolvido</th>
                                    <th class="p-4 w-10"></th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-[var(--macos-divider)]">
                                <% if (locals.attention && attention.length> 0) { %>
                                    <% attention.forEach((group, index)=> { %>
                                        <!-- Group Header Row -->
                                        <tr class="hover:bg-[var(--macos-bg-secondary)] transition-colors cursor-pointer"
                                            onclick="document.getElementById('att-details-<%= index %>').classList.toggle('hidden');">
                                            <td class="p-4">
                                                <div class="flex items-center gap-3">
                                                    <div
                                                        class="w-8 h-8 rounded-full bg-yellow-500/10 flex items-center justify-center text-yellow-500">
                                                        <i class="fa-solid <%= group.icon %>"></i>
                                                    </div>
                                                    <div>
                                                        <p class="font-bold text-[var(--macos-text-primary)]">
                                                            <%= group.reason %>
                                                        </p>
                                                        <p class="text-xs text-[var(--macos-text-tertiary)]">Último: <%=
                                                                new Date(group.latestDate).toLocaleDateString() %>
                                                        </p>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="p-4 font-mono text-sm text-[var(--macos-text-secondary)]">
                                                <%= group.displayLabel %>
                                            </td>
                                            <td class="p-4">
                                                <span
                                                    class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-300">
                                                    <%= group.count %> leads
                                                </span>
                                            </td>
                                            <td class="p-4 font-medium text-[var(--macos-text-primary)]">
                                                <%= group.totalPotencial.toLocaleString('pt-BR', { style: 'currency' ,
                                                    currency: 'BRL' }) %>
                                            </td>
                                            <td class="p-4 text-[var(--macos-text-tertiary)]">
                                                <i class="fa-solid fa-chevron-down text-xs"></i>
                                            </td>
                                        </tr>

                                        <!-- Group Details Row (Collapsible) -->
                                        <tr id="att-details-<%= index %>" class="hidden bg-[var(--macos-bg-secondary)]">
                                            <td colspan="5" class="p-4 pl-16">
                                                <div class="space-y-2">
                                                    <% group.leads.forEach(lead=> { %>
                                                        <div
                                                            class="flex items-center justify-between p-3 bg-[var(--macos-bg-tertiary)] rounded border border-[var(--macos-divider)]">
                                                            <div class="flex items-center gap-3">
