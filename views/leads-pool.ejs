            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    const stateFilter = document.getElementById('stateFilter');
                    const rows = document.querySelectorAll('.lead-row');

                    console.log('✅ Filtro de Estados Carregado. Total de linhas:', rows.length);

                    // 1. Extrair estados únicos
                    const states = new Set();
                    rows.forEach(row => {
                        const stateRaw = row.getAttribute('data-state');
                        if (stateRaw && stateRaw.trim() !== '' && stateRaw !== 'UF') {
                            states.add(stateRaw.trim().toUpperCase());
                        }
                    });

                    console.log('📍 Estados encontrados:', Array.from(states));

                    // 2. Popular o select
                    const sortedStates = Array.from(states).sort();
                    sortedStates.forEach(state => {
                        const option = document.createElement('option');
                        option.value = state;
                        option.textContent = state;
                        stateFilter.appendChild(option);
                    });

                    // 3. Lógica de filtro
                    stateFilter.addEventListener('change', function () {
                        const selectedState = this.value;
                        console.log('🔍 Filtrando por:', selectedState);

                        rows.forEach(row => {
                            const rowState = (row.getAttribute('data-state') || '').trim().toUpperCase();

                            if (!selectedState || rowState === selectedState) {
                                row.style.display = '';
                            } else {
                                row.style.display = 'none';
                            }
                        });
                    });
                    // 4. Detecção de Duplicatas (Retroativa + Nova)
                    const trackingMap = {};

                    // Contar ocorrências
                    rows.forEach(row => {
                        const raw = row.getAttribute('data-tracking') || '|';
                        const [whatsapp, fingerprint] = raw.split('|');

                        // Chaves possiveis
                        if (whatsapp) {
                            trackingMap['wa:' + whatsapp] = (trackingMap['wa:' + whatsapp] || 0) + 1;
                        }
                        if (fingerprint && fingerprint.length > 5) {
                            trackingMap['fp:' + fingerprint] = (trackingMap['fp:' + fingerprint] || 0) + 1;
                        }
                    });

                    // Aplicar badges
                    rows.forEach(row => {
                        const raw = row.getAttribute('data-tracking') || '|';
                        const [whatsapp, fingerprint] = raw.split('|');
                        let isDup = false;
                        let count = 0;
                        let reason = '';

                        if (whatsapp && trackingMap['wa:' + whatsapp] > 1) {
                            isDup = true;
                            count = trackingMap['wa:' + whatsapp];
                            reason = 'Telefone repetido';
                        } else if (fingerprint && fingerprint.length > 5 && trackingMap['fp:' + fingerprint] > 1) {
                            isDup = true;
                            count = trackingMap['fp:' + fingerprint];
                            reason = 'Mesmo dispositivo';
                        }

                        if (isDup) {
                            // Encontrar a célula do nome (2ª coluna) e adicionar badge
                            const nameCell = row.querySelectorAll('td')[1];
                            const badge = document.createElement('div');
                            badge.className = 'inline-flex items-center px-1.5 py-0.5 rounded text-[10px] font-bold bg-red-500/10 text-red-500 border border-red-500/20 mt-1';
                            badge.innerHTML = `<i class="fa-solid fa-clone mr-1"></i> ${count}x (${reason})`;

                            // Adicionar logo abaixo do nome
                            const nameEl = nameCell.querySelector('.font-semibold');
                            if (nameEl) nameEl.insertAdjacentElement('afterend', badge);
                        }
                    });
                });
            </script>
