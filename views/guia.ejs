        <style>
            .guide-layout {
                display: flex;
                gap: 40px;
                max-width: 1400px;
                margin: 0 auto;
                padding: 40px 20px;
            }

            .guide-sidebar {
                width: 280px;
                flex-shrink: 0;
                position: sticky;
                top: 80px;
                height: fit-content;
            }

            .guide-nav {
                background: var(--macos-bg-secondary);
                border: 1px solid var(--macos-divider);
                border-radius: 16px;
                padding: 20px;
            }

            .guide-nav-title {
                font-size: 13px;
                font-weight: 700;
                color: var(--macos-text-secondary);
                text-transform: uppercase;
                letter-spacing: 0.5px;
                margin-bottom: 16px;
            }

            .guide-nav-item {
                display: flex;
                align-items: center;
                gap: 12px;
                padding: 10px 12px;
                border-radius: 8px;
                color: var(--macos-text-primary);
                text-decoration: none;
                font-size: 15px;
                font-weight: 500;
                transition: all 0.2s;
                margin-bottom: 4px;
            }

            .guide-nav-item:hover {
                background: var(--macos-bg-tertiary);
            }

            .guide-nav-item.active {
                background: var(--macos-accent);
                color: #000;
            }

            .guide-nav-icon {
                width: 24px;
                height: 24px;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 16px;
            }

            .guide-container {
                flex: 1;
                min-width: 0;
            }

            .guide-section {
                margin-bottom: 80px;
                scroll-margin-top: 80px;
            }

            .guide-title {
                font-size: 32px;
                font-weight: 700;
                color: var(--macos-text-primary);
                margin-bottom: 16px;
                display: flex;
                align-items: center;
                gap: 16px;
            }

            .guide-text {
                font-size: 16px;
                line-height: 1.6;
                color: var(--macos-text-secondary);
                margin-bottom: 24px;
            }

            .guide-card {
                background: var(--macos-bg-secondary);
                border: 1px solid var(--macos-divider);
                border-radius: 16px;
                padding: 28px;
                margin-bottom: 24px;
            }

            .feature-list {
                list-style: none;
                padding: 0;
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
                gap: 20px;
            }

            .feature-item {
                display: flex;
                align-items: flex-start;
                gap: 14px;
            }

            .feature-icon {
                width: 36px;
                height: 36px;
                border-radius: 10px;
                background: var(--macos-bg-tertiary);
                display: flex;
                align-items: center;
                justify-content: center;
                color: var(--macos-accent);
                flex-shrink: 0;
                font-size: 16px;
            }

            .feature-content h4 {
                font-size: 16px;
                font-weight: 600;
                color: var(--macos-text-primary);
                margin: 0 0 6px 0;
            }

            .feature-content p {
                font-size: 14px;
                color: var(--macos-text-secondary);
                margin: 0;
                line-height: 1.5;
            }

            .section-icon {
                width: 48px;
                height: 48px;
                border-radius: 12px;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 24px;
                flex-shrink: 0;
            }

            @media (max-width: 1024px) {
                .guide-layout {
                    flex-direction: column;
                }

                .guide-sidebar {
                    width: 100%;
                    position: static;
                }

                .guide-nav {
                    display: flex;
                    overflow-x: auto;
                    padding: 16px;
                }

                .guide-nav-title {
                    display: none;
                }

                .guide-nav-item {
                    white-space: nowrap;
                }
            }
        </style>
</head>

