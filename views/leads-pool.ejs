<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <title>Fortal - Novos Leads</title>
    <%- include('partials/head') %>
</head>

<body class="min-h-screen page-leads">

    <%- include('partials/macos-toolbar', { title: 'Piscina de Leads' , username: username, profile_pic_url:
        profile_pic_url }) %>
        <%- include('partials/macos-sidebar', { user: user }) %>

            <main class="macos-main-content">
                <div class="animate-fade-in" style="padding-bottom: 40px; max-width: 1200px; margin: 0 auto;">

                    <!-- Header -->
                    <div class="flex items-center justify-between mb-8">
                        <div>
                            <h1 class="text-3xl font-bold text-[var(--macos-text-primary)] mb-2">Novos Leads</h1>
                            <p class="text-[var(--macos-text-secondary)]">Leads qualificados pelo funil aguardando
                                atendimento.</p>
                        </div>
                        <div class="flex items-center gap-2">
                            <label for="stateFilter"
                                class="text-xs font-semibold text-gray-500 uppercase mr-2">Filtrar:</label>
                            <select id="stateFilter"
                                class="px-3 py-2 bg-white border border-gray-300 rounded-lg text-sm text-gray-800 focus:outline-none focus:border-blue-500 cursor-pointer min-w-[150px]"
                                style="display: block; opacity: 1; visibility: visible;">
                                <option value="">Todos os Estados</option>
                            </select>

                            <div
                                class="px-4 py-2 bg-yellow-500/10 rounded-lg border border-yellow-500/20 text-yellow-500 text-sm font-medium whitespace-nowrap">
                                <i class="fa-solid fa-star mr-2"></i> Leads Quentes: <%= leads.filter(l=> l.score >
                                    70).length %>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Leads Table -->
                <div class="macos-card p-0 overflow-hidden">
                    <div class="overflow-x-auto">
                        <table class="w-full text-left border-collapse">
                            <thead>
                                <tr class="bg-[var(--macos-bg-tertiary)] border-b border-[var(--macos-divider)]">
                                    <th
                                        class="p-4 text-xs font-semibold text-[var(--macos-text-secondary)] uppercase tracking-wider">
                                        Score</th>
                                    <th
                                        class="p-4 text-xs font-semibold text-[var(--macos-text-secondary)] uppercase tracking-wider">
                                        Nome / Contato</th>
                                    <th
                                        class="p-4 text-xs font-semibold text-[var(--macos-text-secondary)] uppercase tracking-wider">
                                        Perfil</th>
                                    <th
                                        class="p-4 text-xs font-semibold text-[var(--macos-text-secondary)] uppercase tracking-wider">
                                        Capital</th>
                                    <th
                                        class="p-4 text-xs font-semibold text-[var(--macos-text-secondary)] uppercase tracking-wider">
                                        AÃ§Ã£o</th>
                                    <% if (locals.isAdmin) { %>
                                        <th
                                            class="p-4 text-xs font-semibold text-[var(--macos-text-secondary)] uppercase tracking-wider">
                                            Rastreio</th>
                                        <% } %>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-[var(--macos-divider)]" id="leadsTableBody">
                                <% if (leads && leads.length> 0) { %>
                                    <% leads.forEach(lead=> { %>
                                        <tr class="hover:bg-[var(--macos-bg-secondary)] transition-colors group lead-row"
                                            data-state="<%= lead.estado || '' %>"
                                            data-tracking="<%= lead.whatsapp %>|<%= lead.fingerprint || '' %>">
                                            <!-- Score -->
                                            <td class="p-4">
                                                <div class="flex items-center gap-2">
                                                    <div class="w-10 h-10 rounded-full flex items-center justify-center font-bold text-sm
                                                    <%= lead.score >= 80 ? 'bg-green-500/20 text-green-500' : 
                                                       lead.score >= 50 ? 'bg-yellow-500/20 text-yellow-500' : 
                                                       'bg-red-500/20 text-red-500' %>">
                                                        <%= lead.score %>
                                                    </div>
                                                </div>
                                            </td>

                                            <!-- Nome -->
                                            <td class="p-4">
                                                <p class="font-semibold text-[var(--macos-text-primary)]">
                                                    <%= lead.nome %>
                                                </p>
                                                <p
                                                    class="text-xs text-[var(--macos-text-tertiary)] flex items-center gap-1 mb-1">
                                                </p>
                                                <i class="fa-solid fa-location-dot"></i>
                                                <%= lead.cidade || 'N/A' %> - <%= lead.estado || 'UF' %>
                                                        </p>
                                                        <p
                                                            class="text-sm text-[var(--macos-text-tertiary)] flex items-center gap-1">
                                                            <i class="fa-brands fa-whatsapp"></i>
                                                            <%= lead.whatsapp %>
                                                        </p>
                                            </td>

                                            <!-- Perfil -->
                                            <td class="p-4">
                                                <div class="flex flex-col gap-1">
                                                    <span class="text-sm text-[var(--macos-text-primary)] capitalize">
                                                        <i
                                                            class="<%= lead.objetivo === 'investir' ? 'fa-solid fa-chart-line text-green-500' : 'fa-solid fa-house text-blue-500' %> mr-1"></i>
                                                        <%= lead.objetivo %>
                                                    </span>

                                                    <% if (lead.experiencia==='ja_arrematei' ) { %>
                                                        <span class="text-xs text-yellow-500 font-medium">
                                                            <i class="fa-solid fa-medal mr-1"></i> JÃ¡ Arrematou
                                                        </span>
                                                        <% } else { %>
                                                            <span class="text-xs text-slate-500">
                                                                <i class="fa-solid fa-graduation-cap mr-1"></i> 1Âª
                                                                Viagem
                                                            </span>
                                                            <% } %>

                                                                <span
                                                                    class="text-xs <%= lead.restricao_nome ? 'text-red-500' : 'text-green-500' %>">
                                                                    <i class="fa-solid fa-id-card mr-1"></i>
                                                                    <%= lead.restricao_nome ? 'RestriÃ§Ã£o Ativa'
                                                                        : 'Nome Limpo' %>
                                                                </span>

                                                                <% if (lead.interesse && lead.interesse
                                                                    !=='nao_informado' ) { %>
                                                                    <span
                                                                        class="text-xs text-[var(--macos-text-primary)] capitalize mt-1 border-t border-[var(--macos-divider)] pt-1">
                                                                        <i
                                                                            class="fa-solid fa-bullseye text-purple-500 mr-1"></i>
                                                                        <%= lead.interesse==='parcerias'
                                                                            ? 'Parcerias/Eventos' :
                                                                            lead.interesse.charAt(0).toUpperCase() +
                                                                            lead.interesse.slice(1) %>
                                                                    </span>
                                                                    <% } %>
                                                </div>
                                            </td>

                                            <!-- Capital -->
                                            <td class="p-4">
                                                <p class="font-medium text-[var(--macos-text-primary)]">
                                                    <%= (lead.capital_entrada || 0).toLocaleString('pt-BR', {
                                                        style: 'currency' , currency: 'BRL' }) %>
                                                </p>
                                                <span
                                                    class="text-xs px-2 py-0.5 rounded-full <%= lead.preferencia_pgto === 'vista' ? 'bg-green-500/10 text-green-500' : 'bg-blue-500/10 text-blue-500' %>">
                                                    <%= lead.preferencia_pgto==='vista' ? 'Ã€ Vista' : 'Financiado' %>
                                                </span>
                                            </td>

                                            <!-- AÃ§Ã£o -->
                                            <td class="p-4">
                                                <form action="/api/leads/claim/<%= lead.id %>" method="POST"
                                                    class="inline">
                                                    <button type="submit"
                                                        class="macos-btn-primary py-1.5 px-3 text-xs flex items-center gap-2">
                                                        <i class="fa-solid fa-user-plus"></i> Puxar
                                                    </button>
                                                </form>
                                            </td>

                                            <!-- Rastreio (Admin Only) -->
                                            <% if (locals.isAdmin) { %>
                                                <td class="p-4 text-xs text-[var(--macos-text-tertiary)] font-mono">
                                                    <div
                                                        title="<%= lead.fingerprint ? 'Visitor ID: ' + lead.fingerprint : 'Sem Fingerprint' %>">
                                                        <i class="fa-solid fa-fingerprint mb-1 mr-1"></i>
                                                        <%= lead.fingerprint ? lead.fingerprint.substring(0, 8) + '...'
                                                            : '--' %>
                                                    </div>
                                                    <div title="<%= lead.ip_address || 'Sem IP' %>">
                                                        <i class="fa-solid fa-network-wired mr-1"></i>
                                                        <%= lead.ip_address || '--' %>
                                                    </div>
                                                </td>
                                                <% } %>
                                        </tr>
                                        <% }); %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="5"
                                                        class="p-8 text-center text-[var(--macos-text-tertiary)]">
                                                        <i class="fa-solid fa-inbox text-4xl mb-2 opacity-50"></i>
                                                        <p>Nenhum lead novo no momento.</p>
                                                    </td>
                                                </tr>
                                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>

                </div>
            </main>

            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    const stateFilter = document.getElementById('stateFilter');
                    const rows = document.querySelectorAll('.lead-row');

                    console.log('âœ… Filtro de Estados Carregado. Total de linhas:', rows.length);

                    // 1. Extrair estados Ãºnicos
                    const states = new Set();
                    rows.forEach(row => {
                        const stateRaw = row.getAttribute('data-state');
                        if (stateRaw && stateRaw.trim() !== '' && stateRaw !== 'UF') {
                            states.add(stateRaw.trim().toUpperCase());
                        }
                    });

                    console.log('ðŸ“ Estados encontrados:', Array.from(states));

                    // 2. Popular o select
                    const sortedStates = Array.from(states).sort();
                    sortedStates.forEach(state => {
                        const option = document.createElement('option');
                        option.value = state;
                        option.textContent = state;
                        stateFilter.appendChild(option);
                    });

                    // 3. LÃ³gica de filtro
                    stateFilter.addEventListener('change', function () {
                        const selectedState = this.value;
                        console.log('ðŸ” Filtrando por:', selectedState);

                        rows.forEach(row => {
                            const rowState = (row.getAttribute('data-state') || '').trim().toUpperCase();

                            if (!selectedState || rowState === selectedState) {
                                row.style.display = '';
                            } else {
                                row.style.display = 'none';
                            }
                        });
                    });
                    // 4. DetecÃ§Ã£o de Duplicatas (Retroativa + Nova)
                    const trackingMap = {};

                    // Contar ocorrÃªncias
                    rows.forEach(row => {
                        const raw = row.getAttribute('data-tracking') || '|';
                        const [whatsapp, fingerprint] = raw.split('|');

                        // Chaves possiveis
                        if (whatsapp) {
                            trackingMap['wa:' + whatsapp] = (trackingMap['wa:' + whatsapp] || 0) + 1;
                        }
                        if (fingerprint && fingerprint.length > 5) {
                            trackingMap['fp:' + fingerprint] = (trackingMap['fp:' + fingerprint] || 0) + 1;
                        }
                    });

                    // Aplicar badges
                    rows.forEach(row => {
                        const raw = row.getAttribute('data-tracking') || '|';
                        const [whatsapp, fingerprint] = raw.split('|');
                        let isDup = false;
                        let count = 0;
                        let reason = '';

                        if (whatsapp && trackingMap['wa:' + whatsapp] > 1) {
                            isDup = true;
                            count = trackingMap['wa:' + whatsapp];
                            reason = 'Telefone repetido';
                        } else if (fingerprint && fingerprint.length > 5 && trackingMap['fp:' + fingerprint] > 1) {
                            isDup = true;
                            count = trackingMap['fp:' + fingerprint];
                            reason = 'Mesmo dispositivo';
                        }

                        if (isDup) {
                            // Encontrar a cÃ©lula do nome (2Âª coluna) e adicionar badge
                            const nameCell = row.querySelectorAll('td')[1];
                            const badge = document.createElement('div');
                            badge.className = 'inline-flex items-center px-1.5 py-0.5 rounded text-[10px] font-bold bg-red-500/10 text-red-500 border border-red-500/20 mt-1';
                            badge.innerHTML = `<i class="fa-solid fa-clone mr-1"></i> ${count}x (${reason})`;

                            // Adicionar logo abaixo do nome
                            const nameEl = nameCell.querySelector('.font-semibold');
                            if (nameEl) nameEl.insertAdjacentElement('afterend', badge);
                        }
                    });
                });
            </script>
</body>

</html>